  include "getARGV.idp";                         // Get Commandline arguments  
  
  
  load    "./../cpp/mfront";
  
  string     mfrontBehaviour     = getARGV( "-mfront_behaviour" , "Elasticity" );
  string     BehaviourHypothesis = "GENERALISEDPLANESTRAIN" ;
  
